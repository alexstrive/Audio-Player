doctype html
html
    head
        meta(charset="utf8")
        link(rel="stylesheet" href="css/main.css")
    body(ng-app="app" ng-controller="appController")
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js")
        script(src="js/index.js")
        script(src="js/controller.js")
        audio#player(src="music.mp3")
        button.btn-play(ng-click="play();") Play/Pause
        input(type="range" ng-model="volume" ng-change="updateVolume();" min="0" max="1" step=".01")
        #progress(ng-click="changePosition($event);")
            #progress-value
            #indicator
        #music-list
            a(ng-repeat="music in musicList" href="#" ng-click="changeSource(music.id)") {{music.author}} - {{music.title}}
                br